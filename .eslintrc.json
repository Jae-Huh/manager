// .eslintrc.json
{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "arrow-body-style": 0,
    "global-require": [0],
    "max-len": [0],
    "no-trailing-spaces": [
      "error",
      { "skipBlankLines": true }
    ],
    "react/forbid-prop-types": [0],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/require-default-props": [0],
    "semi": [2, "never"]
  }
}
